{
  "query": {
    "bool": {
      "must": [
        {
          "query_string": {
            "default_field": "_type",
            "query": "hdp_event"
          }
        },
        {
          "query_string": {
            "default_field": "_id",
            "query": "*"
          }
        },
        {
          "query_string": {
            "default_field": "_all",
            "query": "*"
          }
        }
      ]
    }
  },
  "facets": {
    "Artist": {
      "_label": "Artist",
      "terms": {
        "field": "terms.artist",
        "size": 25
      }
    },
    "Venue": {
      "_label": "Venue",
      "terms": {
        "field": "terms.venue",
        "size": 25
      }
    },
    "Promoter": {
      "_label": "Promoter",
      "terms": {
        "field": "terms.promoter",
        "size": 25
      }
    },
    "Tour": {
      "_label": "Tour",
      "terms": {
        "field": "terms.tour",
        "size": 25
      }
    },
    "Event Type": {
      "_label": "Event Type",
      "terms": {
        "field": "terms.type"
      }
    },
    "Genre": {
      "_label": "Genre",
      "terms": {
        "field": "terms.genre"
      }
    },
    "Age Limit": {
      "_label": "Age Limit",
      "terms": {
        "field": "terms.age_limit",
        "order": "term"
      }
    },
    "Date": {
      "_label": "Event Month",
      "date_histogram": {
        "field": "time",
        "interval": "month",
        "value_script": "doc['time'].value"
      }
    },
    "City": {
      "_label": "City",
      "terms": {
        "field": "terms.city",
        "all_terms": true,
        "size": 50
      }
    },
    "State": {
      "_label": "State",
      "terms": {
        "field": "venue.location.state",
        "size": "5"
      }
    },
    "Distance": {
      "_label": "Distance",
      "geo_distance": {
        "venue.location.coordinates": {
          "lat": "35.7",
          "lon": "-78"
        },
        "ranges": [
          {
            "to": "80"
          },
          {
            "from": "80",
            "to": "150"
          },
          {
            "from": "150",
            "to": "300"
          },
          {
            "from": "300"
          }
        ]
      }
    },
    "Test: Ballroom": {
      "_label": "Ballroom",
      "_description": "Events that have the word Ballroom in title.",
      "query": {
        "query_string": {
          "query": "%Ballroom%",
          "default_field": "title"
        }
      }
    }
  },
  "partial_fields": {
    "$_output": {
      "exclude": [
        "_*"
      ]
    }
  }
}